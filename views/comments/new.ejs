<% include ../partials/header %>

<div id="commform" class="container">
	<div class="row">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center;">Add New Comment To <%= hikeroute.name %></h1>
        </div>
        <div class="form">
			<form action="/hikeroutes/<%= hikeroute._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Comment">
				</div>
				<div class="form-group">
					<button class="btn btn-sm btn-info btn-block">Submit!</button>
				</div>
					
			</form>
			<a href="/hikeroutes">Go Back</a>
		</div>
	</div>	
</div>

	<% include ../partials/footer %>
