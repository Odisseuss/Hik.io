<% include partials/header %>




<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Hik.io!</h1>
			<p>View our hand-picked hiking routes from the Carpathian Mountains</p>
			<p>
				<a class="btn btn-primary btn-large" href="hikeroutes/new">Add New Hiking Route</a>
			</p>
		</div>
	</header>



	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
	<% for(var i = 0; i<hikeRoutes.length; i++){  %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= hikeRoutes[i].image %>">
				<div class="caption">
					<h4> <%= hikeRoutes[i].name %> </h4>
				</div>
				<p>
					<a href="/hikeroutes/<%= hikeRoutes[i]._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<% } %>
	</div>
</div>

<% include partials/footer %>
