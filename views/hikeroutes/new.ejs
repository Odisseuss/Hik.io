
<% include ../partials/header %>

<div id="createform" class="container">
	<div class="row">
        <div class="col-md-12 text-center">
		    <h1 >Create a new hiking route</h1>
        </div>
		<div class="form" >
			<form action="/hikeroutes" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Enter a description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
					
			</form>
			<a href="/hikeroutes">Go Back</a>
		</div>
	</div>	
</div>

	<% include ../partials/footer %>
