
<% include ../partials/header %>




<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-mountain"></i>Welcome to Hik.io!</h1>
			<p>View our hand-picked hiking routes</p>
			<p>
				<a class="btn btn-info btn-large" href="hikeroutes/new">Add New Hiking Route</a>
			</p>
		</div>
	</header>



	<div class="row text-center">
	<% for(var i = 0; i<hikeRoutes.length; i++){  %>
		<div class=" col-lg-4 col-md-6 mb-4">
            <div class="card">
                <img src="<%= hikeRoutes[i].image %>" class="card-img-top" alt="<%= hikeRoutes[i].name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= hikeRoutes[i].name %></h5>
                    <p class="card-text"><%-hikeRoutes[i].description.substring(0,69)%>...</p>
                    <a href="/hikeroutes/<%=hikeRoutes[i].id%>" class="btn btn-info">More info</a>
                </div>
            </div>
		</div>
	<% } %>
	</div>
</div>

<% include ../partials/footer %>

